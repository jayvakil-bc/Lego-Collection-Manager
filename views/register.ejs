<!-- views/register.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/css/main.css" />
  <style>
    .bright-green-button {
      background-color: #4CAF50; 
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .bright-green-button:hover {
      background-color: #45a049; 
    }
    .w-full {
      width: 100%;
    }
    .input-field {
      width: 100%;
      height: 40px; 
      padding: 10px; 
      margin-bottom: 15px; 
      border: 1px solid #ccc; 
      border-radius: 8px; 
      box-sizing: border-box; 
    }

    .alert {
      margin-top: 10px;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #f2f2f2;
    }

    .alert-error {
      border: 1px solid #f44336; 
      background-color: #f8d7da; 
    }
  </style>
</head>

<body>

    <%- include('partials/navbar', { page: '/register' }) %>
  
    <div class="container mx-auto p-4">
  
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Register</h1>
            <p class="py-6">Please provide your credentials below</p>
          </div>
        </div>
      </div>
  
      <br />
  
      <% if (!successMessage) { %>
        <div class="register-form-container">
          <form action="/register" method="POST" class="register-form">
            <div class="mb-4">
              <label for="userName" class="block text-sm font-medium text-gray-700">User Name</label>
              <input type="text" id="userName" name="userName" placeholder="User Name" required class="mt-1 p-2 w-full input-field">
            </div>
      
            <div class="mb-4">
              <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
              <input type="password" id="password" name="password" placeholder="Password" required class="mt-1 p-2 w-full input-field">
            </div>
            <div class="mb-4">
              <label for="password2" class="block text-sm font-medium text-gray-700">Confirm Password</label>
              <input type="password" id="confirmPassword" name="password2" placeholder="Confirm Password" required class="mt-1 p-2 w-full input-field">
            </div>
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
              <input type="email" id="email" name="email" placeholder="Email Address" required class="mt-1 p-2 w-full input-field">
            </div>
      
            <button class="bright-green-button" type="submit">Register</button>
          </form>
    
          <% if (errorMessage) { %>
            <div class="alert alert-error mt-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><%= errorMessage %></span>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <div class="alert mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 90 0118 0z" />
          </svg>
          <span><%= successMessage %></span>
        </div>
        <br />
        <a href="/login" class="btn btn-success bright-green-button">Proceed to Log in</a>
      <% } %>
    </div>

  </body>
  
  </html>